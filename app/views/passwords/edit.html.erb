<h1>Edit Password</h1> 

<%= form_with model: Current.user, url: edit_password_path, local: true, data: { turbo: false }  do |form| %>
    <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message|%>
                <div><%= message %></div>
            <% end %> 
        </div>
    <% end %>
    <div>
        <%= form.label :password, 'PASSWORD (has to be at least 6 characters long, to have, at least one number)' %>
        <%= form.password_field :password, placeholder: 'password' %>
    </div>
    <div>
        <%= form.label :password_confirmation  %>
        <%= form.password_field :password_confirmation, placeholder: 'password' %>
    </div>

    <div>
        <%= form.submit 'Update password' %>
    </div>

<% end %>