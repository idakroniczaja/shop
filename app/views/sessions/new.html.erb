<h1>Sign in</h1> 

<%= form_with url: sign_in_path, local: true do |form| %>
    
    <div>
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: 'example@gmail.com' %>
    </div> 
    <div>
        <%= form.label :password, 'PASSWORD (has to be at least 6 characters long, to have, at least one number)' %>
        <%= form.password_field :password, placeholder: 'password' %>
    </div>

    <div>
        <%= form.submit 'Sign in' %>
    </div>

<% end %>